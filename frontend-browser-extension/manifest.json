{
  "name": "URL Forwarder Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Monitors visited URLs and sends them to a local companion app for scraping.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "mainController.js" 
  },
  "action": {
    "default_popup": "popup.html"
  }
}
